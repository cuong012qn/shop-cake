@model shop_cake.ViewModel.ProductViewModel
@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <h1>Edit</h1>

        <h4>ProductViewModel</h4>
        <hr />
    </section>

    <section class="content">
        <form asp-action="Edit" enctype="multipart/form-data">
            <div class="form-row">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="ID" />
                <div class="form-group col-6">
                    <label asp-for="Name" class="control-label"></label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-group col-6">
                    <label asp-for="Description" class="control-label"></label>
                    <input asp-for="Description" class="form-control" />
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
                <div class="form-group col-6">
                    <label asp-for="UnitPrice" class="control-label"></label>
                    <input asp-for="UnitPrice" class="form-control" />
                    <span asp-validation-for="UnitPrice" class="text-danger"></span>
                </div>
                <div class="form-group col-6">
                    <label asp-for="PromotionPrice" class="control-label"></label>
                    <input asp-for="PromotionPrice" class="form-control" />
                    <span asp-validation-for="PromotionPrice" class="text-danger"></span>
                </div>
                <div class="form-group col-12">
                    <img class="img-fluid img-thumbnail" id="imgUpload" src="~/image/product/@Model.Image" />
                    <input asp-for="ImageUpload" class="form-control" accept=".jpg" />
                    <span asp-validation-for="Image" class="text-danger"></span>
                </div>
                <div class="form-group col-6">
                    <label asp-for="Unit" class="control-label"></label>
                    <input asp-for="Unit" class="form-control" />
                    <span asp-validation-for="Unit" class="text-danger"></span>
                </div>
                <div class="form-group col-6">
                    <label asp-for="New" class="control-label"></label>
                    @*<input asp-for="New" class="form-control" />*@
                    <select asp-for="New" class="form-control">
                        <option value="0">Cũ</option>
                        <option value="1">Mới</option>
                    </select>
                    <span asp-validation-for="New" class="text-danger"></span>
                </div>
                <div class="form-group col-6">
                    <label asp-for="IDType" class="control-label"></label>
                    <select asp-for="IDType" asp-items="ViewBag.IDType" class="form-control"></select>
                    <span asp-validation-for="IDType" class="text-danger"></span>
                </div>
                <div class="form-group col-6">
                    <input type="submit" value="Save" class="btn btn-primary" />
                </div>
            </div>
        </form>

        <div>
            <a asp-action="Index">Back to List</a>
        </div>

    </section>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}


    <script>
        function readURL(input) {
            if (input.files && input.files[0]) {
                var reader = new FileReader();

                reader.onload = function (e) {
                    $('#imgUpload').attr('src', e.target.result);
                }

                reader.readAsDataURL(input.files[0]); // convert to base64 string
            }
        }

        $("#ImageUpload").change(function () {
            readURL(this);
        });
    </script>
}
